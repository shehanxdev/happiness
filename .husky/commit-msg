#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

if ! head -1 "$1" | grep -qE "^(feat|fix|chore|docs|test|style|refactor|perf|build|ci|revert)(\(.+?\))?: .{1,}$"; then
    echo "ðŸš«Aborting commit. Your commit message is invalid. Please check the Conventional Commits guide : https://www.conventionalcommits.org/en/v1.0.0/ ðŸš«" >&2
    exit 1
fi
if ! head -1 "$1" | grep -qE "^.{1,88}$"; then
    echo "ðŸš«Aborting commit. Your commit message is too long.ðŸš«" >&2
    exit 1
fi